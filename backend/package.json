{
  "name": "image-upload-app",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "lint": "eslint src .",
    "prettier": "npx prettier . --check --write",
