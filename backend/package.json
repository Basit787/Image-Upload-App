    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.4",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "prettier": "3.5.3",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.26.0"
